@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@*Carousel row*@
<div id="carousel-images" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    @* Buttonfs of the carousel (one per image)   *@
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel-images" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carousel-images" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carousel-images" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    @* All images of the Caurosel *@
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/home/carousel/1.png" class="d-block carousel-images" alt="Nayarit State"/>
            
            <div class="carousel-caption">
                <h2>
                    "The colors of their costumes were like a vibrant painting come to life I felt the magic in every twirl!" 
                </h2>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/home/carousel/2.png" class="d-block carousel-images" alt="Nayarit State Men" />
            <div class="carousel-caption">
                <h2>
                    "Their performance was not just a dance, it was a magical journey through the heart of Mexico."
                </h2>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/home/carousel/3.png" class="d-block carousel-images" alt="Hidalgo State" />
            <div class="carousel-caption">
                <h2>
                    "The energy of the troupe was infectious, I found myself smiling and wanting to join in on the fun!"
                </h2>
            </div>
        </div>
    </div>
    
    @*Next and previous iconts to manually change carousels photos*@
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel-images" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel-images" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@*About us row (cta) *@
<div class="row">
    <div class="col-md-5 cta-about-us-container">
        <h1>
            Yolotzin <span class="few-words"> in a few words ...</span>
        </h1>
        <p class="paragraph-about-us">
            Yolotzin brings Mexico's vibrant heart to life through dance, blending folkloric traditions with contemporary
            flair. Discover the spirit and stories of Mexican culture in every step. Click to learn more about our journey!
        </p>
        <a class="nav-link btn button-about-us" asp-page="/AboutUs">READ MORE</a>
    </div>

    <div class="col-md-7 cta-img-container-about-us">
        <img src="~/images/home/about/about.jpg" class="cta-img" alt="Sinaloa State Performance"/>
    </div>
</div>

@*Classes row (services CTA) *@
<div class="row">
    <div class="col-md-8 cta-img-container order-md-0 order-1">
        <img src="~/images/home/cta/classes.jpg" class="cta-img" alt="Rehearsal photo" />
    </div>
    <div class="col-md-4 cta-text-container order-md-1 order-0">
        <h1>
            CLASSES
        </h1>
        <p>
            Take a look at the different classes we offer!
        </p>
        <a class="nav-link btn button-cta" href="/Classes#classes-begin">READ MORE</a>
    </div>
</div>

@*Auditions row (CTA)*@
<div class="row">
    <div class="col-md-4 cta-text-container">
        <h1>
            AUDITIONS
        </h1>
        <p>
            Would you like to be in our company?
        </p>
        <a class="nav-link btn button-cta" asp-page="/Classes">READ MORE</a>
    </div>

    <div class="col-md-8 cta-img-container-about-us">
        <img src="~/images/home/cta/auditions.png" class="cta-img" alt="Jalisco State Performance" />
    </div>
</div>

@*Performance video row*@
<div class="row my-md-5 my-5 mt-1">
    <h1 class="performance-title">Performance video</h1>
    <div class="ratio ratio-16x9">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/qrdYdM4WocE" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
</div>
