@page
@model OrtizAbrahamSprint3.Pages.RegistrationsModel
@{
}

@*Se quiere poner toda la informacion para hacer el registro de las clases*@

@*Title rows*@
<div class="sign-up-title">
    <h1>Enroll a class here!</h1>
</div>

@*Form rows*@
<form method="post" class="all-data-container">
    @*First name row*@
    <div class="enter-data-container">
        <label>First name</label>
        <input asp-for="FirstName" type="text" />
        <span asp-validation-for="FirstName"></span>
    </div>
    @*Last name row*@
    <div class="enter-data-container">
        <label>Last name</label>
        <input asp-for="LastName" type="text" />
        <span asp-validation-for="LastName"></span>
    </div>
    @*Email row*@
    <div class="enter-data-container">
        <label>Email</label>
        <input asp-for="EmailAddress" type="text" />
        <span asp-validation-for="EmailAddress"></span>

    </div>
    @*Phone number row*@
    <div class="enter-data-container">
        <label>Phone number</label>
        <input asp-for="PhoneNumber" type="tel" />
        <span asp-validation-for="PhoneNumber"></span>

    </div>
    @*Date of birth row*@
    <div class="enter-data-container">
        <label>Date of birth</label>
        <input asp-for="Birthday" type="date" />
        <span>@Model.MessageAgeRange</span>

    </div>
</form>


@*Link to sign in row*@
<div class="link-to-sign-container">
    <p>Do you want to sign in?</p>
    <a asp-area="" asp-page="/SignIn">Sign in</a>
</div>
