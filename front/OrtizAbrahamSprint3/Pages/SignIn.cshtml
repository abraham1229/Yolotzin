@page
@model OrtizAbrahamSprint3.Pages.SignInModel
@{
    ViewData["Title"] = "Sign In";
}

@*Title rows*@
<div class="sign-up-title">
    <h1>Sign in to your profile</h1>
    <p>To enroll a class you need to sign up!</p>
</div>

@*Form rows*@
<form method="post" class="all-data-container">
    @*Username row*@
    <div class="enter-data-container">
        <label>Username</label>
        <input asp-for="Username" type="text"/>
        <span asp-validation-for="Username"></span>
    </div>
    @*Password row*@
    <div class="enter-data-container">
        <label>Password</label>
        <input asp-for="UserPassword" type="password" />
        <span asp-validation-for="UserPassword"></span>
    </div>
    @*Buttons rows*@
    <div class="data-buttons-container">
        <input asp-page-handler="ClearForm" type="submit" value="Clear Form" class="clear-button" />
        <input asp-page-handler="SignIn" type="submit" value="Sign In" class="submit-button" />
    </div>
    
    @*Erorr Message Row*@
    <span class="error-message">@Model.Message</span>

</form>

@*Row link to sign up*@

<div class="link-to-sign-container">
    <p>Don't have an account yet?</p>
    <a asp-area="" asp-page="/SignUp">Sign up</a>
</div>

